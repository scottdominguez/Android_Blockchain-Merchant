                android:id="@+id/button10"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/selector_pearl_white"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="0.5dp"
                android:padding="@dimen/pinentry_padding">

                <TextView
                    android:id="@+id/decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="."
                    android:textColor="@color/textColorPrimary"
                    android:alpha="0.4"
                    android:textSize="@dimen/pinentry_num_text_size"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/selector_pearl_white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/pinentry_padding"
                android:layout_margin="0.5dp"
                android:tag="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:alpha="0.4"
                    android:textSize="@dimen/pinentry_num_text_size"
                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonDeleteBack"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/selector_pearl_white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/pinentry_padding"
                android:layout_margin="0.5dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@mipmap/ic_backspace_black_24dp"
                    android:alpha="0.4"
                    />

            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>